{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RubricGraderResponse",
  "type": "object",
  "properties": {
    "verdict": {
      "type": "string",
      "enum": ["pass", "fail"]
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 10
    },
    "reason": {
      "type": "string"
    }
  },
  "required": ["verdict", "score", "reason"],
  "additionalProperties": false
}
